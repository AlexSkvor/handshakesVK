<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/timeQueriesLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginBottom="@dimen/marginBig"
            android:visibility="invisible"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/timeField"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/queriesField"
                android:layout_width="0dp"
                android:gravity="center"
                android:lines="1"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:id="@+id/firstRefHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginStart="@dimen/marginBig"
            android:layout_marginEnd="@dimen/marginBig"
            android:gravity="center"
            android:text="@string/firstRefHint"
            android:textSize="@dimen/textSizeBig" />

    <EditText
            android:id="@+id/firstRefEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginBig"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginEnd="@dimen/marginBig"
            android:importantForAutofill="no"
            android:inputType="textUri"
            android:lines="1"
            android:maxLength="999"
            android:maxLines="1"
            tools:ignore="LabelFor" />

    <TextView
            android:id="@+id/secondRefHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginBig"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginEnd="@dimen/marginBig"
            android:gravity="center"
            android:text="@string/secondRefHint"
            android:textSize="@dimen/textSizeBig" />

    <EditText
            android:id="@+id/secondRefEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginBig"
            android:layout_marginTop="@dimen/marginBig"
            android:layout_marginEnd="@dimen/marginBig"
            android:importantForAutofill="no"
            android:inputType="textUri"
            android:lines="1"
            android:maxLength="999"
            android:maxLines="1"
            tools:ignore="LabelFor" />

    <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginBig"
            android:text="@string/start" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/answerRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_answer" />

</LinearLayout>